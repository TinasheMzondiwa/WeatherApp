<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/windowBackground</item>
        <item name="colorAccent">@color/theme</item>
        <item name="colorPrimary">@color/theme</item>
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:textColorSecondary">@color/secondary</item>
    </style>

    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog_fragment</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="Theme.PopupMenu.Large" parent="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:fontFamily">@font/sans_regular</item>
    </style>

    <style name="Theme.PopupMenu.Small" parent="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small">
        <item name="android:fontFamily">@font/sans_regular</item>
    </style>

    <style name="Theme.Toolbar" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/sans_regular</item>
    </style>

    <style name="Theme.Dialog" parent="AppTheme.Dialog">
        <item name="android:fontFamily">@font/sans_regular</item>
        <item name="colorAccent">@color/icon_tint</item>
        <item name="android:windowBackground">@drawable/bg_alert_dialog</item>
        <item name="android:textColorPrimary">@color/icon_tint</item>
        <item name="android:windowTitleStyle">@style/TextAppearance.Dialog.Title</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.Dialog.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/sans_bold</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/windowBackground</item>
        <item name="colorPrimaryDark">@color/windowBackgroundDark</item>
        <item name="colorAccent">@color/theme</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:textColorSecondary">@color/secondary</item>
        <item name="android:textAppearanceLargePopupMenu">@style/Theme.PopupMenu.Large</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/Theme.PopupMenu.Small</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.MaterialComponents.Dialog.Alert"/>
</resources>